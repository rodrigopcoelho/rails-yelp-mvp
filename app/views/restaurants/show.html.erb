<p style="color: green"><%= notice %></p>

<div class="text-center">
<h1> <%= @restaurant.name %></h1>
<h2>address: <%= @restaurant.address %></h2>
<h3>phone number: <%= @restaurant.phone_number %></h3>
<h4><%= @restaurant.category %> food</h4>

<h4>Reviews:</h4>
<% @restaurant.reviews.each do |review| %>
  <li><%= review.content %></li>
<% end %>

<p><%= link_to "Add a new review", new_restaurant_review_path(@restaurant.id) %></p>





<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>

</div>
